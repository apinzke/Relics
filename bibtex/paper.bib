	Date-Added = {2012-01-24 19:09:43 +0000},
	Date-Modified = {2012-01-24 19:09:43 +0000},
	Doi = {10.1111/j.1365-2966.2008.14136.x},
	Eprint = {0806.3272},
	Journal = {\mnras},
	Keywords = {elementary particles , magnetic fields , radiation mechanisms: non-thermal , cosmic rays , galaxies: clusters: general},
